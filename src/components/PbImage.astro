---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nomMaison || "Image"}
            inferSize={true}
            
        />
    )
}

const {
  record,
  imageField,
  width = 400,   // valeur par défaut
  height = 300,  // valeur par défaut
} = Astro.props;