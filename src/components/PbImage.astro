---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage, width = 400, height = 300 } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            alt={record.nomMaison || "Image"}
            inferSize={true}
            widths={[width]}
            heights={[height]}
        />
    )
}
