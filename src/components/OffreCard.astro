---
const { offre } = Astro.props;
let isFavori = offre.Favoris;
---

<div
    class="offre-card offre"
    data-favori={isFavori.toString()}
    style={`border:1px solid #ddd; border-radius:10px; box-shadow:0 2px 8px #0001; padding:1rem; margin:1rem; max-width:320px; display:flex; flex-direction:column; align-items:center; background:${isFavori ? "#e3e8ff" : "#fff"}; transition:background 0.3s;`}
>
    <h2 style="margin:0.5rem 0; font-size:1.3rem;">{offre.nomMaison}</h2>
    <p style="margin:0.2rem 0; color:#666;">{offre.Adresse}</p>
    <p style="margin:0.2rem 0; font-weight:bold; color:#2a7;">{offre.Prix} €</p>
    <p style="margin:0.2rem 0;">Surface : {offre.Superficie} m²</p>
    <p style="margin:0.2rem 0;">
        Chambres : {offre.NbChambres} | Sdb : {offre.NbSdb}
    </p>

    <button
        type="button"
        style="margin-top:1rem; padding:0.5rem 1rem; border-radius:6px; border:none; background:#070782; color:white; cursor:pointer;"
        onclick="this.parentElement.style.background = this.parentElement.dataset.favori === 'true' ? '#fff' : '#e3e8ff'; this.parentElement.dataset.favori = this.parentElement.dataset.favori === 'true' ? 'false' : 'true';"
    >
        Ajouter au favoris
    </button>
</div>
