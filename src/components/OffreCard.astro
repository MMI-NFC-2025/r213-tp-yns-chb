---
const { offre } = Astro.props;
let isFavori = offre.Favoris;
import PbImage from "./PbImage.astro";
---

<div
    class="offre-card offre"
    data-favori={isFavori.toString()}
    style={`
        border-radius: 16px;
        box-shadow: 0 4px 16px #0001;
        padding: 1rem;
        max-width: 340px;
        width: 100%;
        background: ${isFavori ? "#e3e8ff" : "#fff"};
        display: flex;
        flex-direction: column;
        align-items: center;
    `}
    onmouseover="this.style.boxShadow='0 8px 32px 0 #1a237e33, 0 2px 8px #0001'; this.style.transform='translateY(-4px) scale(1.025)'; this.style.transition='box-shadow 0.5s, transform 0.5s, background 0.5s';"
    onmouseout="this.style.boxShadow='0 4px 24px 0 #0002, 0 1.5px 6px #0001'; this.style.transform='none'; this.style.transition='box-shadow 0.5s, transform 0.5s, background 0.5s';"
>
    <PbImage
        record={offre}
        recordImage={offre.image[0]}
        style="width:100%; max-width:260px; height:180px; object-fit:cover; border-radius:12px; box-shadow:0 2px 8px #0001; margin-bottom:1rem;"
    />
    <h2
        style="margin:0; font-size:1.2rem; font-weight:600; text-align:center; color:#1a237e; letter-spacing:0.5px;"
    >
        {offre.nomMaison}
    </h2>
    <a href={`/offres/${offre.id}`}>Voir plus</a>
</div>
