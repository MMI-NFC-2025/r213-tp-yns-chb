---
import { getOffre } from "../../js/backend.mjs";
import Layout from "../../layouts/Layout.astro";
import PbImage from "../../components/PbImage.astro";

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre?.nomMaison}>
    <div class="max-w-6xl mx-auto px-4 py-8">
        <!-- Titre principal -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-slate-800 mb-2">
                {offre?.nomMaison}
            </h1>
            <p class="text-xl text-slate-600">{offre?.Adresse}</p>
        </div>

        <!-- Grille principale -->
        <div class="grid md:grid-cols-2 gap-8 mb-8">
            <!-- Galerie d'images -->
            <div class="space-y-4">
                <div class="w-full h-96 overflow-hidden rounded-2xl shadow-xl">
                    <PbImage
                        record={offre}
                        recordImage={offre.image[0]}
                        style="width:100%; height:100%; object-fit:cover;"
                    />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div
                        class="w-full h-48 overflow-hidden rounded-xl shadow-lg"
                    >
                        <PbImage
                            record={offre}
                            recordImage={offre.image[1]}
                            style="width:100%; height:100%; object-fit:cover;"
                        />
                    </div>
                    <div
                        class="w-full h-48 overflow-hidden rounded-xl shadow-lg"
                    >
                        <PbImage
                            record={offre}
                            recordImage={offre.image[2]}
                            style="width:100%; height:100%; object-fit:cover;"
                        />
                    </div>
                    
                </div>
            </div>

            <!-- Informations -->
            <div class="space-y-6">
                <!-- Prix -->
                <div
                    class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-6 rounded-xl shadow-lg"
                >
                    <p class="text-sm uppercase tracking-wide mb-2">Prix</p>
                    <p class="text-4xl font-bold">
                        {offre?.Prix.toLocaleString("fr-FR")} €
                    </p>
                </div>

                <!-- Caractéristiques -->
                <div
                    class="bg-white p-6 rounded-xl shadow-md border border-slate-200"
                >
                    <h3 class="text-xl font-semibold text-slate-800 mb-4">
                        Caractéristiques
                    </h3>
                    <div class="space-y-3">
                        <div
                            class="flex items-center justify-between py-3 border-b border-slate-100"
                        >
                            <span class="text-slate-600 font-medium"
                                >Surface</span
                            >
                            <span class="text-lg font-semibold text-slate-800"
                                >{offre?.Superficie} m²</span
                            >
                        </div>
                        <div
                            class="flex items-center justify-between py-3 border-b border-slate-100"
                        >
                            <span class="text-slate-600 font-medium"
                                >Chambres</span
                            >
                            <span class="text-lg font-semibold text-slate-800"
                                >{offre?.NbChambre}</span
                            >
                        </div>
                        <div class="flex items-center justify-between py-3">
                            <span class="text-slate-600 font-medium"
                                >Salles de bain</span
                            >
                            <span class="text-lg font-semibold text-slate-800"
                                >{offre?.NbSdb}</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Bouton de contact -->
                <a
                    href="/offres"
                    class="block w-full bg-slate-700 hover:bg-slate-800 text-white text-center font-semibold py-4 px-6 rounded-xl shadow-md transition-all duration-300 hover:shadow-xl"
                >
                    Retour aux offres
                </a>
            </div>
        </div>
    </div>
</Layout>
